<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExActivity"/>
        <activity android:name=".DayActivity"/>
        <activity android:name=".Day.DayTodolistActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Day.DayDiaryActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".WeekActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Week.WeekAddTodoActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Week.WeekEditTodoActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".MonthActivity"/>
    </application>

</manifest>